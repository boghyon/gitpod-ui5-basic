{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>ui5/renovate-config"
  ],
  "separateMinorPatch": true,
	"rangeStrategy": "bump",
  "lockFileMaintenance": {
		"enabled": true,
		"automerge": true
  },
  "packageRules": [
		{
			"matchDepNames": [
				"*"
			],
			"automerge": true
		}
  ]
}
